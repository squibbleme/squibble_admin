.row
  .col-md-12.page-404
    .number 422
    .details
      %h3
        Error 422
        %small Unprocessable Entity

      .note.note-danger
        = exception.message

      %p
        = link_to 'Back to Dashboard', root_path, class: %w(btn btn-default)


      - if admin_user_signed_in? and current_admin_user.role? :super_administrator
        = debug(params)
        - begin
          = debug(exception)
        - rescue Exception